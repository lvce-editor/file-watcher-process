{
  "name": "@lvce-editor/file-watcher-process-monorepo",
  "version": "0.0.0-dev",
  "description": "File Watcher Process Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/file-watcher-process.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "",
  "scripts": {
    "build": "node packages/build/src/build.js",
    "build:watch": "./packages/build/node_modules/.bin/esbuild --format=esm --platform=node --bundle --external:electron --external:trash --external:ws --watch packages/file-watcher-process/src/fileWatcherProcessMain.ts --outfile=packages/file-watcher-process/dist/index.js",
    "format": "prettier --write .",
    "postinstall": "lerna bootstrap --ci",
    "lint": "eslint .",
    "test": "lerna run test",
    "test-integration": "lerna run test-integration",
    "type-check": "tsc -b"
